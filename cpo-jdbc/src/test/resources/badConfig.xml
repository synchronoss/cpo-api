<cpoConfig xmlns="http://www.synchronoss.org/cpo/CpoConfig.xsd"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.synchronoss.org/cpo/CpoConfig.xsd ../../../../cpo-core/src/main/resources/xsd/CpoConfig.xsd"
 defaultConfig="jdbc">

  <metaConfig name="jdbcMeta">
    <metaXml>/emptyClassMetaData.xml</metaXml>
    <metaXml>${cpo.valueMeta.xml}</metaXml>
    <metaXml>${cpo.lobMeta.xml}</metaXml>
    <metaXml>/emptyMetaData.xml</metaXml>
  </metaConfig>

   <dataConfig xsi:type="ctJdbcConfig" name="jdbc">
      <metaDescriptorName>jdbcMeta</metaDescriptorName>
      <cpoConfigProcessor>org.synchronoss.cpo.jdbc.config.JdbcCpoConfigProcessor</cpoConfigProcessor>
    <readWriteConfig>
         <!-- <dataSourceClassName>${cpo.db.class}</dataSourceClassName> -->
         <url>${cpo.db.url}</url>
         <user>${cpo.db.user}</user>
     <password>${cpo.db.pswd}</password>
    </readWriteConfig>
  </dataConfig>
</cpoConfig>
